<div class="content-wrapper row">
    <div class="card col-6">
        <div class="h3 card-header bg-white">
            Order History
        </div>
        <div class="card-body ">
            <div class="overflow-auto">
                {{!-- Đơn hàng --}}
                <div class="card mb-3">
                    <div class="card-body content-wrapper rounded">
                        <div class="row">
                            <strong class="h4 col-3 font-weight-bold" id="id">ID: {{id}}</strong>
                            <strong class="h4 col-4 font-weight-bold" id="time">Order At: {{time}}</strong>
                            <strong class="h4 col-5 font-weight-bold" id="status">Status:
                                <span class="bg-{{status_color}} px-3 rounded py-1">
                                    <!-- đổi màu trang thái-->
                                    {{status}}
                                </span>
                            </strong>
                        </div>
                        <div class="h4 mt-2">Package</div>
                        <div class="row">
                            <div class="col-7 my-auto">
                                {{!-- package --}}
                                <div class="row bg-white rounded py-2 mb-2 mx-auto">
                                    <div class="font-weight-bold col-5" id="catepack">
                                        {{catepack}}
                                    </div>
                                    <div class="col-6 pl-5" id="namepack">
                                        {{namepack}}
                                    </div>
                                </div>
                                {{!-- package --}}
                            </div>
                            <div class="col-5">
                                <div class="text-right mr-3">
                                    <div id="total" class="font-weight-bold">Total: {{total}} VND</div>
                                    <button type="button" class="font-weight-bold mt-3 btn btn-success">
                                        THANH TOÁN
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- đơn hàng --}}
            </div>
        </div>
    </div>
    <div class="card col-5 mx-auto">
        <div class="h3 card-header bg-white">
            Package Detail
        </div>
        <table class="table">
            <thead>
                <tr class="bg-white text-black">
                    <th scope="col">Name</th>
                    <th scope="col">Price(VND)</th>
                    <th scope="col">Unit</th>
                    <th scope="col">Quanity</th>
                </tr>
            </thead>
            <tbody id="tabinfo">
                {{!-- detail package --}}
                <tr>

                    <td>kem đánh răng</td>
                    <td>20.000</td>
                    <td>Tuýp</td>
                    <td>1</td>

                </tr>
                {{!-- detail package --}}
            </tbody>
        </table>

    </div>
</div>

{{#section "js"}}
