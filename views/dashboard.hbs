<div class="content-wrapper">
  {{!-- welcome --}}
  <div class="row mb-4 ml-2">
    <div class="col-12 col-xl-8 mb-4 mb-xl-0 ">
      <h3 class="font-weight-bold">Welcome {{user.name}}</h3>
      <h6 class="font-weight-normal mb-0">All systems are running smoothly!</h6>
    </div>
    <div class="col-12 col-xl-4">
      <div class="justify-content-end d-flex">
        <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
          <button class="btn btn-sm btn-light bg-white dropdown-toggle" type="button" id="dropdownMenuDate2"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="mdi mdi-calendar mx-1"></i> {{from}}
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuDate2" style="">
            <a class="dropdown-item" href="/dashboard?from=today">Today</a>
            <a class="dropdown-item" href="/dashboard?from=lastweek">Last 7 days</a>
            <a class="dropdown-item" href="/dashboard?from=lastmonth">Last 30 days</a>
            <a class="dropdown-item" href="/dashboard?from=lastyear">Last 365 days</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- total on each status --}}
  <div class="row">
    <div class="col-md-6 grid-margin stretch-card">
      <div class="card card-dark-blue">
        <div class="card-body">
          <h2 style="margin-top: 20px">Total cases</h2>
          <h1>{{totalCases}} Cases</h1>
          <h4 style="margin-top: 20px">(Total cases switched: {{totalCasesSwitched}} Cases)</h4>
        </div>
      </div>
    </div>
    <div class="col-md-6 grid-margin transparent">
      <div class="row">
        <div class="col-md-6 mb-4 stretch-card transparent">
          <div class="card card-light-danger">
            <div class="card-body">
              <p class="mb-4">Total F0</p>
              <p class="fs-30 mb-2">{{F0}} Cases</p>
              <p>Total F0 switched: {{F0_switched}} Cases</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-4 stretch-card transparent">
          <div class="card card-dark-blue">
            <div class="card-body">
              <p class="mb-4">Total F1</p>
              <p class="fs-30 mb-2">{{F1}} Cases</p>
              <p>Total F1 switched: {{F1_switched}} Cases</p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
          <div class="card card-light-blue">
            <div class="card-body">
              <p class="mb-4">Total F2</p>
              <p class="fs-30 mb-2">{{F2}} Cases</p>
              <p>Total F2 switched: {{F2_switched}} Cases</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 stretch-card transparent">
          <div class="card card-light-danger">
            <div class="card-body">
              <p class="mb-4">Total Cured</p>
              <p class="fs-30 mb-2">{{cured}} Cases</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- Cases Statistic --}}
  <div class="row">
    <div class="col-md-8 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <div class="row mb-4 ml-2">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0 ">
              <p class="card-title">Weekly Cases statistic</p>
              <p class="font-weight-500">The chart showing the cases statistic</p>
            </div>
            <div class="col-12 col-xl-4">
              <div class="justify-content-end d-flex">
                <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                  <div>
                    <label style="font-size: 15px;" class="my-0" for="from">From</label>
                    <input id="from" type="date" placeholder="dd-mm-yyyy" value="" min="2018-01-01" max="2022-12-31">
                  </div>
                  <div class="my-1">
                    <label style="font-size: 15px;" class="my-0 mr-3" for="to">To</label>
                    <input id="to" type="date" placeholder="dd-mm-yyyy" value="" min="2018-01-01" max="2022-12-31">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <canvas id="order-chart"></canvas>
        </div>
      </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
      <div class="card">
        <div class="card-body">
          <p class="card-title">User State Update</p>
          <ul class="icon-data-list"
            style="width: 100%; max-height: 450px; overflow:hidden; overflow-y:scroll;">
            {{#each userStateUpdate}}
            <li>
              <div class="d-flex">

                <div>
                  <p class="text-info mb-1">User ID: {{user.id}} - {{user.name}}</p>
                  <p class="mb-0">Transform to: {{covid_status}}</p>
                  <small>{{record_time}}</small>
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  {{!-- Product & Product Combo --}}
  <div class="row">
    <div class="col-md-12 grid-margin stretch-card">
      <div class="card position-relative">
        <div class="card-body">
          {{!-- product --}}
          <div class="row">
            <div class="col-md-2 d-flex flex-column justify-content-start">
              <div class="ml-xl-4 mt-3">
                <p class="card-title">Product Statistic</p>
                <h1 class="text-primary">{{products.total}}</h1>
                <h3 class="font-weight-500 mb-xl-4 text-primary">Products</h3>
                <p class="mb-2 mb-xl-0">The total number product sold to patient</p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div class="border-right" style="width: 100%;">
                  <div class="table-responsive mb-3 mb-md-0 mt-3">
                    <table class="table table-borderless report-table">
                      {{#each products.list}}
                      <tr>
                        <td class="text-muted">{{product.name}}</td>
                        <td class="w-100 px-0">
                          <div class="progress progress-md mx-4">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: {{percent}}%"
                              aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                          </div>
                        </td>
                        <td>
                          <h5 class="font-weight-bold mb-0">{{count}}</h5>
                        </td>
                      </tr>
                      {{/each}}
                    </table>
                  </div>
                </div>
              </div>
              <div class="carousel-item">
                {{!-- package --}}
                <div class="row">
                  <div class="col-md-12 col-xl-3 d-flex flex-column justify-content-start">
                    <div class="ml-xl-4 mt-3">
                      <p class="card-title">Package Sold</p>
                      <h1 class="text-primary">{{packs.total}}</h1>
                      <h3 class="font-weight-500 mb-xl-4 text-primary">Packages</h3>
                      <p class="mb-2 mb-xl-0">The total number Package sold to patient</p>
                    </div>
                  </div>
                  <div class="col-md-12 col-xl-9">
                    <div class="row">
                      <div class="col-md-6 border-right">
                        <div class="table-responsive mb-3 mb-md-0 mt-3">
                          <table class="table table-borderless report-table">
                            {{#each packs.list}}
                            <tr>
                              <td class="text-muted">{{pack.name}}</td>
                              <td class="w-100 px-0">
                                <div class="progress progress-md mx-4">
                                  <div class="progress-bar bg-primary" role="progressbar" style="width: {{percent}}%"
                                    aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                              </td>
                              <td>
                                <h5 class="font-weight-bold mb-0">{{count}}</h5>
                              </td>
                            </tr>
                            {{/each}}
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-2 d-flex flex-column justify-content-start">
              <div class="ml-xl-4 mt-3">
                <p class="card-title">Package Statistics</p>
                <h1 class="text-primary">{{packs.total}}</h1>
                <h3 class="font-weight-500 mb-xl-4 text-primary">Packages</h3>
                <p class="mb-2 mb-xl-0">The total number Package sold to patient</p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div style="width: 100%;">
                  <div class="table-responsive mb-3 mb-md-0 mt-3">
                    <table class="table table-borderless report-table">
                      {{#each packs.list}}
                      <tr>
                        <td class="text-muted">{{pack.name}}</td>
                        <td class="w-100 px-0">
                          <div class="progress progress-md mx-4">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: {{percent}}%"
                              aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                          </div>
                        </td>
                        <td>
                          <h5 class="font-weight-bold mb-0">{{count}}</h5>
                        </td>
                      </tr>
                      {{/each}}
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- Debt / payment --}}
  <div class="row">
    <div class="col-md-7 grid-margin stretch-card my-0" style="height:100%;">
      <div class="card">
        <div class="card-body">
          <p class="card-title mb-0">Order</p>
          <div class="table-responsive">
            <table class="table table-striped table-borderless" style="width: 100%; height: 250px; overflow:hidden; overflow-y:scroll;">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>User ID</th>
                  <th>Total price</th>
                  <th>Order At</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                {{#each orders}}
                <tr>
                  <td>{{id}}</td>
                  <td class="font-weight-bold">{{user_id}}</td>
                  <td class="font-weight-bold">{{total_price}}</td>
                  <td>{{ordered_at}}</td>
                  <td class="font-weight-medium">
                    <div class="badge badge-{{#if paid_at}}success{{else}}warning{{/if}}">
                      {{#if paid_at}}Paid{{else}}Pending{{/if}}
                    </div>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-5 grid-margin grid-margin-lg-0 stretch-card">
      <div class="card">
        <div class="card-body">
          <div class="chartjs-size-monitor">
            <div class="chartjs-size-monitor-expand">
              <div class=""></div>
            </div>
            <div class="chartjs-size-monitor-shrink">
              <div class=""></div>
            </div>
          </div>
          <h4 class="card-title">Pie chart</h4>
          <canvas id="pieChart" style="display: block;"
            class="chartjs-render-monitor"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>

