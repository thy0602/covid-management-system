<div class="content-wrapper">
  {{!-- welcome --}}
  <div class="row">
    <div class="col-md-12 grid-margin">
      <div class="row">
        <div class="col-12 col-xl-8 mb-4 mb-xl-0">
          <h3 class="font-weight-bold">Welcome {{username}}</h3>
          <h6 class="font-weight-normal mb-0">All systems are running smoothly!
            You have
            <span class="text-primary">{{notiAmount}} unread alerts!</span>
          </h6>
        </div>
      </div>
    </div>
  </div>
  {{!-- total on each status --}}
  <div class="row">
    <div class="col-md-6 grid-margin stretch-card">
      <div class="card card-dark-blue">
        <div class="card-body">
          <h2 style="margin-top: 20px">Total cases</p>
            <h1>{{totalCases}} Cases</p>
        </div>
      </div>
    </div>
    <div class="col-md-6 grid-margin transparent">
      <div class="row">
        <div class="col-md-6 mb-4 stretch-card transparent">
          <div class="card card-light-danger">
            <div class="card-body">
              <p class="mb-4">Total F0</p>
              <p class="fs-30 mb-2">{{F0}} Cases</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-4 stretch-card transparent">
          <div class="card card-dark-blue">
            <div class="card-body">
              <p class="mb-4">Total F1</p>
              <p class="fs-30 mb-2">{{F1}} Cases</p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
          <div class="card card-light-blue">
            <div class="card-body">
              <p class="mb-4">Total F2</p>
              <p class="fs-30 mb-2">{{F2}} Cases</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 stretch-card transparent">
          <div class="card card-light-danger">
            <div class="card-body">
              <p class="mb-4">Total Cured</p>
              <p class="fs-30 mb-2">{{cured}} Cases</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- Cases Statistic --}}
  <div class="row">
    <div class="col-md-8 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <p class="card-title">Weekly Cases statistic</p>
          <p class="font-weight-500">The chart showing the cases in HCM City in the last 7 days</p>
          {{!-- <div class="d-flex flex-wrap mb-5">
            <div class="mr-5 mt-3">
              <p class="text-muted">Total F0</p>
              <h3 class="text-primary fs-30 font-weight-medium">{{today.F0}}</h3>
            </div>
            <div class="mr-5 mt-3">
              <p class="text-muted">Total F1</p>
              <h3 class="text-primary fs-30 font-weight-medium">{{today.F1}}</h3>
            </div>
            <div class="mr-5 mt-3">
              <p class="text-muted">Total F2</p>
              <h3 class="text-primary fs-30 font-weight-medium">{{today.F2}}</h3>
            </div>
            <div class="mr-5 mt-3">
              <p class="text-muted">Total Cured</p>
              <h3 class="text-primary fs-30 font-weight-medium">{{today.cured}}</h3>
            </div>
          </div> --}}
          <canvas id="order-chart"></canvas>
        </div>
      </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
      <div class="card">
        <div class="card-body">
          <p class="card-title">User State Update</p>
          <ul class="icon-data-list" style="width: 100%; overflow:hidden; overflow-y:scroll;">
            {{#each userStateUpdate}}
            <li>
              <div class="d-flex">

                <div>
                  <p class="text-info mb-1">User ID: {{user.id}} - {{user.name}}</p>
                  <p class="mb-0">Transform to: {{covid_status}}</p>
                  <small>{{record_time}}</small>
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  {{!-- Product & Product Combo --}}
  <div class="row">
    <div class="col-md-12 grid-margin stretch-card">
      <div class="card position-relative">
        <div class="card-body">
          {{!-- product --}}
          <div class="row">
            <div class="col-md-2 d-flex flex-column justify-content-start">
              <div class="ml-xl-4 mt-3">
                <p class="card-title">Product Statistic</p>
                <h1 class="text-primary">{{products.total}}</h1>
                <h3 class="font-weight-500 mb-xl-4 text-primary">Product Sold</h3>
                <p class="mb-2 mb-xl-0">The total number product sold to patient</p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div class="border-right" style="width: 100%;">
                  <div class="table-responsive mb-3 mb-md-0 mt-3">
                    <table class="table table-borderless report-table">
                      {{#each products.list}}
                      <tr>
                        <td class="text-muted">{{product.name}}</td>
                        <td class="w-100 px-0">
                          <div class="progress progress-md mx-4">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: {{percent}}%"
                              aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                          </div>
                        </td>
                        <td>
                          <h5 class="font-weight-bold mb-0">{{count}}</h5>
                        </td>
                      </tr>
                      {{/each}}
                    </table>
                  </div>
                </div>
              </div>
              <div class="carousel-item">
                {{!-- package --}}
                <div class="row">
                  <div class="col-md-12 col-xl-3 d-flex flex-column justify-content-start">
                    <div class="ml-xl-4 mt-3">
                      <p class="card-title">Package Sold</p>
                      <h1 class="text-primary">{{packs.total}}</h1>
                      <h3 class="font-weight-500 mb-xl-4 text-primary">Packages</h3>
                      <p class="mb-2 mb-xl-0">The total number Package sold to patient</p>
                    </div>
                  </div>
                  <div class="col-md-12 col-xl-9">
                    <div class="row">
                      <div class="col-md-6 border-right">
                        <div class="table-responsive mb-3 mb-md-0 mt-3">
                          <table class="table table-borderless report-table">
                            {{#each packs.list}}
                            <tr>
                              <td class="text-muted">{{pack.name}}</td>
                              <td class="w-100 px-0">
                                <div class="progress progress-md mx-4">
                                  <div class="progress-bar bg-primary" role="progressbar" style="width: {{percent}}%"
                                    aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                              </td>
                              <td>
                                <h5 class="font-weight-bold mb-0">{{count}}</h5>
                              </td>
                            </tr>
                            {{/each}}
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-2 d-flex flex-column justify-content-start">
              <div class="ml-xl-4 mt-3">
                <p class="card-title">Package Sold</p>
                <h1 class="text-primary">{{packs.total}}</h1>
                <h3 class="font-weight-500 mb-xl-4 text-primary">Packages</h3>
                <p class="mb-2 mb-xl-0">The total number Package sold to patient</p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div style="width: 100%;">
                  <div class="table-responsive mb-3 mb-md-0 mt-3">
                    <table class="table table-borderless report-table">
                      {{#each packs.list}}
                      <tr>
                        <td class="text-muted">{{pack.name}}</td>
                        <td class="w-100 px-0">
                          <div class="progress progress-md mx-4">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: {{percent}}%"
                              aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                          </div>
                        </td>
                        <td>
                          <h5 class="font-weight-bold mb-0">{{count}}</h5>
                        </td>
                      </tr>
                      {{/each}}
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- Debt / payment --}}
  <div class="row">
    <div class="col-md-7 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <p class="card-title mb-0">Order</p>
          <div class="table-responsive">
            <table class="table table-striped table-borderless">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>User ID</th>
                  <th>Total price</th>
                  <th>Order At</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                {{#each orders}}
                <tr>
                  <td>{{id}}</td>
                  <td class="font-weight-bold">{{user_id}}</td>
                  <td class="font-weight-bold">{{total_price}}</td>
                  <td>{{ordered_at}}</td>
                  <td class="font-weight-medium">
                    <div class="badge badge-{{#if paid_at}}success{{else}}warning{{/if}}">
                      {{#if paid_at}}Completed{{else}}Pending{{/if}}
                    </div>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{#section "js"}}
<!-- Custom js for this page-->
<script type="text/javascript" src="js/dashboard.js"></script>
<script type="text/javascript" src="js/Chart.roundedBarCharts.js"></script>
<!-- End custom js for this page-->
{{/section}}