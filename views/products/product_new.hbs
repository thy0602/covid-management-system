{{#if isSubmitProduct}}
<div style="padding-top: 10px; background-color: #F5F7FF">

  <form class="col-10 mx-auto my-5">
    <div class="row mx-auto"><input
        type="hidden"
        id="id"
        value={{product.id}}
        disabled
      />
      <h3>New Product</h3>
    </div>

    <div class="form-row mt-5">
      <div class="form-group col-md-6 row mx-auto">
        <div class="was-validated" style="width: 90%">
          <label for="name">Product Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            value="{{product.name}}"
            required
          />
          <div class="invalid-feedback">
            Can not leave this field empty!
          </div>
        </div>
      </div>

      <div class="form-group col-md-6 row mx-auto">
        <div class="was-validated" style="width: 90%">
          <label for="price">Price</label>
          <!-- kiểm tra username có tồn tại chưa bằng ajax nếu tồn tại
                                        thì thêm class vào input là is-invalid else is-valid-->
          <input
            type="text"
            class="form-control is-valid"
            id="price"
            value="{{product.price}}"
            required
          />
          <div class="invalid-feedback">
            Can not leave this field empty!
          </div>
        </div>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6 row mx-auto">
        <div class="was-validated" style="width: 90%">
          <label for="unit">Unit</label>
          <input
            type="text"
            class="form-control"
            id="unit"
            value={{product.unit}}
            required
          />
          <div class="invalid-feedback">
            Can not leave this field empty!
          </div>
        </div>
      </div>
    </div>
  </form>

  <div class="col-10 mx-auto my-5">
    <form
      class="mx-2"
      method="post"
      action="/products/{{product.id}}/upload?post=true"
      enctype="multipart/form-data"
    >
      <input
        class="form-control"
        type="hidden"
        type="text"
        name="ProID"
        value={{product.id}}
        disabled
      />
      <div class="form-group">
        <input
          class="form-control-file file"
          type="file"
          id="fileUp"
          name="fileUp"
          multiple
        />
      </div>
      <div class="form-group text-right my-2">
        <button type="submit" class="btn btn-warning">Upload</button>
      </div>
    </form>
  </div>
</div>

{{else}}
