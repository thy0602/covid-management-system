<div class="content-wrapper">
  <div class="mb-3">
    <button type="button" style="background-color: #4c42be; color: white" 
      class="btn rounded-right" onclick="location.href='/products';">
        Back to Necessities
    </button>
  </div>
  
  <div class="row">
    <div class="stretch-card grid-margin">
      <div class="card">
        <div class="card-body">
          <p class="card-title">Product Detail</p>
          <div class="row">
            <div class="col-md-5" style="height: 500px;">
              <div class="row my-2 p-0">
                <div
                  id="carouselExampleControls"
                  class="carousel slide"
                  data-bs-ride="carousel"
                  data-bs-interval="2500"
                >
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img
                        src="/{{thumbnail.url}}"
                        class="d-block w-100"
                        alt="{{product.name}}"
                      />
                    </div>
                    {{#each image}}
                      <div class="carousel-item">
                        <img
                          src="/{{url}}"
                          class="d-block w-100"
                          alt="{{product.name}}"
                        />
                      </div>
                    {{/each}}
                  </div>
                  <button
                    class="carousel-control-prev"
                    type="button"
                    data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev"
                  >
                    <span
                      class="carousel-control-prev-icon"
                      aria-hidden="true"
                    ></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button
                    class="carousel-control-next"
                    type="button"
                    data-bs-target="#carouselExampleControls"
                    data-bs-slide="next"
                  >
                    <span
                      class="carousel-control-next-icon"
                      aria-hidden="true"
                    ></span>
                    <span class="visually-hidden">Next</span>
                  </button>
                </div>
              </div>
            </div>
            <div class="col-md-5" style="margin-left: 20px;">
              <h3>{{product.name}} - ID: {{product.id}}</h3>

              <div class="py-2">
                <h6>Đơn vị tính</h6>
                <h4>{{product.unit}}</h4>
              </div>

              <div class="py-2">
                <h6>Giá</h6>
                <h3>{{product.price}}</h3>
              </div>
            </div>
          </div>

          <div class="d-grid gap-2 col-3 mx-auto my-2">
            <button class="btn register" style="background-color: #2B237C; color: white"
            onclick="moveToEdit({{product.id}})">
              Edit
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{#section "css"}}
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    type="text/css"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
  ></script>
{{/section}}

{{#section 'js'}}
<script type="text/javascript">
  function moveToEdit(id){
    $(location).attr("href",`/products/${id}/edit`);
  }
</script>
{{/section}}